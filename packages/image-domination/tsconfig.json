{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "target": "es2017",
    "sourceMap": true,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": "",
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node"]
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": [
    "./node_modules/*",
    "./node_modules/@types",
    "dist",
    "*.yml"
  ],
  "buildOnSave": true
}
